<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HundirLaFlota_MarioLlamaGarcia.MainPage">

    <ScrollView>
        <VerticalStackLayout
        Padding="30,0"
        Spacing="25">
            <Grid
              x:Name="TableroGrid">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Grid.Row="1" Grid.Column="0"
                  Text="A"/>
                <Label Grid.Row="2" Grid.Column="0"
                  Text="B"/>
                <Label Grid.Row="3" Grid.Column="0"
                  Text="C"/>
                <Label Grid.Row="4" Grid.Column="0"
                  Text="D"/>
                <Label Grid.Row="5" Grid.Column="0"
                  Text="E"/>
                <Label Grid.Row="6" Grid.Column="0"
                  Text="F"/>
                <Label Grid.Row="7" Grid.Column="0"
                  Text="G"/>
                <Label Grid.Row="8" Grid.Column="0"
                  Text="H"/>
                <Label Grid.Row="9" Grid.Column="0"
                  Text="I"/>
                <Label Grid.Row="10" Grid.Column="0"
                  Text="J"/>

                <Label Grid.Column="1" Grid.Row="0"
                  Text="1"/>
                <Label Grid.Column="2" Grid.Row="0"
                  Text="2"/>
                <Label Grid.Column="3" Grid.Row="0"
                  Text="3"/>
                <Label Grid.Column="4" Grid.Row="0"
                  Text="4"/>
                <Label Grid.Column="5" Grid.Row="0"
                  Text="5"/>
                <Label Grid.Column="6" Grid.Row="0"
                  Text="6"/>
                <Label Grid.Column="7" Grid.Row="0"
                  Text="7"/>
                <Label Grid.Column="8" Grid.Row="0"
                  Text="8"/>
                <Label Grid.Column="9" Grid.Row="0"
                  Text="9"/>
                <Label Grid.Column="10" Grid.Row="0"
                  Text="10"/>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
